	<bean id="localMatriculaTurmaService"
		class="br.ufg.inf.apsi.escola.componentes.admc.servico.local.LocalMatriculaTurmaService" />

	<!-- ============================================================================================================================= -->
	<!-- nf - Notas e Frequencias                                                                                                      -->
	<!-- ============================================================================================================================= -->
	<bean id="localNotaFrequenciaService"
