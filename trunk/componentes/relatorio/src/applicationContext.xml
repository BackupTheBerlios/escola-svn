		class="br.ufg.inf.apsi.escola.componentes.relatorios.servico.local.LocalRelatorioService">
		<property name="consultas" ref="consultasBean" />
		<property name="relatorioNotasEFrequencias"
			ref="relatorioNotasEFrequenciasBean" />
	</bean>

