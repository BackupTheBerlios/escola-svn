<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.berlios.escola.acd.src">

  <class name="Questao">
 		<id name="id" type="long" column="questaoId">
			<generator class="native" />
		</id>

		<property name="objetiva" type="boolean" not-null="true" />

		<property name="pergunta" type="string" not-null="true" />
  </class>
</hibernate-mapping>