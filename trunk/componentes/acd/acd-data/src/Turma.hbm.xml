<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="de.berlios.escola.acd.src">

  <class name="Turma">
		<id name="id" type="long" column="turmaId">
			<generator class="native" />
		</id>

 		<one-to-one name="Avaliacao" property-ref="Turma" lazy="false" />

<!--	<many-to-one name="Avaliacao" column="avaliacaoId" unique="true" not-null="false" lazy="false" /> -->

		<property name="nome" type="string" not-null="true" />

		<property name="dataInicio" type="calendar" />

		<property name="dataTermino" type="calendar" />
  </class>
</hibernate-mapping>