<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="br.ufg.inf.apsi.escola.componentes.acd.modelo">

	<class name="FormAvaliacao" table="FormAvaliacao">
		<id name="id" type="long" column="formAvaliacaoId">
			<generator class="native" />
		</id>

		<property name="alunoId" type="long" not-null="true" />

		<many-to-one name="Avaliacao" column="avaliacaoId" not-null="true" lazy="false" />

		<list name="respostas" table="Resposta" lazy="false" cascade="all,delete-orphan">
			<key column="formAvaliacaoId" not-null="true" />
			<list-index column="indice" />
			<one-to-many class="Resposta" />
		</list>
	</class>
</hibernate-mapping>
